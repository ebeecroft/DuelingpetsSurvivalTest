<% provide(:title, "Duelingpets: Shouts") %>
<% provide(:description, "Shouts allows users to post messages on a users profile.") %>
<% provide(:keywords, "virtualpet, digitalpets, shout") %>
<% provide(:robots, "noindex, nofollow") %>
<% provide(:h1, "Shout List") %>
<div class="formlinks"><%= paginate @shouts %></div>
<br>
<% @shouts.each do |shout| %>
   <div class="pageformat">
      <div class="container"><%= button_to 'Edit', edit_shoutbox_shout_path(shout.shoutbox, shout), method: :get, class: "button editbutton" %></div> <div class="container"><%= button_to 'Destroy', [shout.shoutbox, shout], method: :delete, data: { confirm: 'Are you sure?' }, class: "button editbutton" %></div>
      <p>Created: <%= distance_of_time_in_words_to_now shout.created_on %> ago on (<%= shout.created_on.strftime("%B-%d-%Y") %>)</p>
      <% if !shout.reviewed_on.nil? %>
         <p>Reviewed on: <%= distance_of_time_in_words_to_now shout.reviewed_on %> ago on(<%= shout.reviewed_on.strftime("%B-%d-%Y") %>)</p>
      <% end %>
      <p>Updated: <%= distance_of_time_in_words_to_now blogreply.updated_on %> ago on (<%= blogreply.updated_on.strftime("%B-%d-%Y") %>)</p>
      <p>Shoutbox: <%= shout.shoutbox.name %></p>
      <br>
      <% if shout.user.userinfo.miniavatar.to_s != "" %>
         <p><%= image_tag(shout.user.userinfo.miniavatar_url(:thumb)) %></p>
      <% end %>
      <p class="formlinks">Owner: <%= getUserPrivilege(shout.user) %><%= link_to shout.user.vname, user_path(shout.user) %></p>
      <p>Status: <%= getActivity(shout.user) %>
         <% if getActivity(shout.user) != "Online" && getActivity(shout.user) != "Inoperable" %>
            for <%= distance_of_time_in_words_to_now getTime(shout.user) %>
         <% end %>
      </p>
      <br>
      <p class="textindent"><%= textFormater("Multi", shout.message, "All").html_safe %></p>
   </div>
   <br>
<% end %>
<p class="formlinks"><%= link_to 'Back', root_path %></p>
