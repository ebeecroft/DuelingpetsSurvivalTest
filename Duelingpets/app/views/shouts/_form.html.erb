<%= form_with(model: [@shoutbox, @shout], local: true) do |form| %>
  <% if @shout.errors.any? %>
     <div class="alignboxes">
        <div id="errorexplan">
           <h2 id="errorheader"><%= pluralize(@shout.errors.count, "error") %> prohibited this shout from being saved:</h2>
           <ul>
              <% @shout.errors.full_messages.each do |message| %>
                 <li class="explantext"><%= message %></li>
              <% end %>
           </ul>
        </div>
     </div>
  <% end %>
  <div class="pageformat">
    <%= form.label :message %>
    <%= form.text_area :message %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.submit class: "button submitbutton" %>
  </div>
  <br>
  <p class="formlinks"><%= link_to 'Back', user_path(@shout.user) %></p>
<% end %>
