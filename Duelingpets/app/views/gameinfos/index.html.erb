<% provide(:title, "Duelingpets: Gameinfos") %>
<% provide(:description, "Gameinfo provides users with the ability to set their difficulty level and a variety of other stats.") %>
<% provide(:keywords, "virtualpet, digitalpets, gameinfo") %>
<% provide(:robots, "noindex, nofollow") %>
<% provide(:h1, "Gameinfo List") %>
<div class="formlinks"><%= paginate @gameinfos %></div>
<br>
<% @gameinfos.each do |gameinfo| %>
   <div class="pageformat">
      <p><%= button_to 'Edit Gameinfo', edit_gameinfo_path(gameinfo), method: :get %></p>
      <p>Difficulty Level: <%= gameinfo.difficulty_id %></p>
      <p>Lives on: <%= gameinfo.lives_enabled %></p>
      <p>Ageing on: <%= gameinfo.ageing_enabled %></p>
      <p>Success: <%= gameinfo.success %></p>
      <p>Failure: <%= gameinfo.failure %></p>
      <p>Gamecomplete: <%= gameinfo.gamecompleted %></p>
      <p>Game started: <%= gameinfo.startgame %></p>
      <p>Activated on: <%= gameinfo.activated_on %></p>
      <p class="formlinks">Owner name: <%= link_to gameinfo.user.vname, user_path(gameinfo.user) %></p>
      <p>Status: <%= getActivity(gameinfo.user) %>
         <% if getActivity(gameinfo.user) == "Offline" || getActivity(gameinfo.user) == "Inactive" %>
            for <%= distance_of_time_in_words_to_now getTime(gameinfo.user) %>
         <% end %>
      </p>
   </div>
   <br>
<% end %>
<p class="formlinks"><%= link_to 'Back', root_path %></p>
