<%= form_with(model: @dragonhoard, local: true) do |form| %>
  <% if @dragonhoard.errors.any? %>
     <div class="alignboxes">
        <div id="errorexplan">
           <h2 id="errorheader"><%= pluralize(@dragonhoard.errors.count, "error") %> prohibited this dragonhoard from being saved:</h2>
           <ul>
              <% @dragonhoard.errors.full_messages.each do |message| %>
                 <li class="explantext"><%= message %></li>
              <% end %>
           </ul>
        </div>
     </div>
  <% end %>
  <div class="pageformat">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :basecost %>
    <%= form.number_field :basecost %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :baserate %>
    <%= form.text_field :baserate %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :message %>
    <%= form.text_area :message %>
  </div>
  <br>
  <p class="pageformat">Dragonimage files</p>
  <div class="pageformat">
     <%= image_tag @dragonhoard.dragonimage_url(:thumb).to_s if @dragonhoard.dragonimage? %>
  </div>
  <div class="pageformat">
     <%= form.file_field :dragonimage %>
  </div>
  <div class="pageformat">
    <%= form.label :remote_dragonimage_url, "or Dragonimage URL" %><br />
    <%= form.text_field :remote_dragonimage_url %>
    <%= form.hidden_field :dragonimage_cache %>
  </div>
  <br>
  <p class="pageformat">Ogg files</p>
  <div class="pageformat">
     <%= audio_tag(@dragonhoard.ogg_url.to_s, :controls => true) if @dragonhoard.ogg? %>
  </div>
  <div class="pageformat">
     <%= form.file_field :ogg %>
  </div>
  <div class="pageformat">
    <%= form.label :remote_ogg_url, "or Ogg URL" %><br />
    <%= form.text_field :remote_ogg_url %>
    <%= form.hidden_field :ogg_cache %>
  </div>
  <br>
  <p class="pageformat">MP3 files</p>
  <div class="pageformat">
     <%= audio_tag(@dragonhoard.mp3_url.to_s, :controls => true) if @dragonhoard.mp3? %>
  </div>
  <div class="pageformat">
     <%= form.file_field :mp3 %>
  </div>
  <div class="pageformat">
    <%= form.label :remote_mp3_url, "or Mp3 URL" %><br />
    <%= form.text_field :remote_mp3_url %>
    <%= form.hidden_field :mp3_cache %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.submit class: "button submitbutton" %>
  </div>
  <br>
  <p class="formlinks"><%= link_to 'Back', dragonhoards_path %></p>
<% end %>
