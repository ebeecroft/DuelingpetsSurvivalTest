<%= form_with(model: [@user, @referral], local: true) do |form| %>
  <% if @referral.errors.any? %>
     <div class="alignboxes">
        <div id="errorexplan">
           <h2 id="errorheader"><%= pluralize(@referral.errors.count, "error") %> prohibited this referral from being saved:</h2>
           <ul>
              <% @referral.errors.full_messages.each do |message| %>
                 <li class="explantext"><%= message %></li>
              <% end %>
           </ul>
        </div>
     </div>
  <% end %>
  <div class="pageformat">
    <%= form.label :vname %>
    <%= form.text_field :vname %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.submit class: "button submitbutton" %>
  </div>
  <br>
  <% if @object == "Edit" %>
     <p class="formlinks"><%= link_to 'Back', referrals_path %></p>
  <% else %>
     <p class="formlinks"><%= link_to 'Back', user_path(@user) %></p>
  <% end %>
<% end %>
