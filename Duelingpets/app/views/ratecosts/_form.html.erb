<%= form_with(model: [@dragonhoard, @ratecost], local: true) do |form| %>
  <% if @ratecost.errors.any? %>
     <div class="alignboxes">
        <div id="errorexplan">
           <h2 id="errorheader"><%= pluralize(@ratecost.errors.count, "error") %> prohibited this ratecost from being saved:</h2>
           <ul>
              <% @ratecost.errors.full_messages.each do |message| %>
                 <li class="explantext"><%= message %></li>
              <% end %>
           </ul>
        </div>
     </div>
  <% end %>
  <div class="pageformat">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <br>
  <% if @object != "Edit" %>
     <div class="pageformat">
       <%= form.label :amount %>
       <%= form.text_field :amount %>
     </div>
     <br>
  <% end %>
  <div class="pageformat">
    <%= form.label :econtype %>
    <%= form.text_field :econtype %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :baserate_id, "Select Baserate" %>
    <%= form.collection_select(:baserate_id, @baserates, :id, :name) %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.submit class: "button submitbutton" %>
  </div>
  <br>
  <p class="formlinks"><%= link_to 'Back', ratecosts_path %></p>
<% end %>
