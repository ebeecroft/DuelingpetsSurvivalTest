<% provide(:title, "Duelingpets: Colorscheme List") %>
<% provide(:description, "Colorschemes generated by our talented designers.") %>
<% provide(:keywords, "virtualpet, digitalpets, colorscheme, designers") %>
<% provide(:robots, "noindex, nofollow") %>
<% provide(:h1, "Colorscheme List") %>
<div class="formlinks"><%= paginate @colorschemes %></div>
<br>
<% @colorschemes.each do |colorscheme| %>
   <div class="pageformat">
      <div class="container"><p>Name: <%= colorscheme.name %></p></div> <div class="container"><%= button_to 'Edit', edit_user_colorscheme_path(colorscheme.user, colorscheme), method: :get, class: "button editbutton" %></div> <div class="container"><%= button_to 'Destroy', [colorscheme.user, colorscheme], method: :delete, class: "button destroybutton", data: { confirm: 'Are you sure?' } %></div>
      <div class="container">
         <% if colorscheme.activated %>
            <%= button_to 'Disable', colorschemes_activate_path(:color_id => colorscheme.id), method: :post, class: "button submitbutton" %>
         <% else %>
            <%= button_to 'Enable', colorschemes_activate_path(:color_id => colorscheme.id), method: :post, class: "button submitbutton" %>
         <% end %>
      </div>
      <p>Created on: <%= distance_of_time_in_words_to_now colorscheme.created_on %> ago on (<%= colorscheme.created_on.strftime("%B-%d-%Y") %>)</p>
      <br>
      <% if colorscheme.user.userinfo.miniavatar.to_s != "" %>
         <p><%= image_tag(colorscheme.user.userinfo.miniavatar_url(:thumb)) %></p>
      <% end %>
      <p class="formlinks">Designer: <%= getUserPrivilege(colorscheme.user) %><%= link_to colorscheme.user.vname, user_path(colorscheme.user) %></p>
      <p>Status: <%= getActivity(colorscheme.user) %>
         <% if getActivity(colorscheme.user) != "Online" && getActivity(colorscheme.user) != "Inoperable" %>
            for <%= distance_of_time_in_words_to_now getTime(colorscheme.user) %>
         <% end %>
      </p>
      <br>
      <p>Activated: <%= colorscheme.activated %></p>
      <p>Nightcolor: <%= colorscheme.nightcolor %></p>
      <p>Demo color: <%= colorscheme.democolor %></p>
      <div class="container">Background color:</div> <div class="container" style="color: <%= colorscheme.backgroundcolor %>; background-color: <%= colorscheme.headercolor %>"><%= colorscheme.backgroundcolor %></div>
      <br>
      <div class="container">Header color:</div> <div class="container" style="color: <%= colorscheme.headercolor %>; background-color: <%= colorscheme.backgroundcolor %>"><%= colorscheme.headercolor %></div>
      <br>
      <div class="container">Subheader1 color:</div> <div class="container" style="color: <%= colorscheme.subheader1color %>; background-color: <%= colorscheme.backgroundcolor %>"><%= colorscheme.subheader1color %></div>
