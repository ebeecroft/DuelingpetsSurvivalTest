<% provide(:title, "Duelingpets: Movies") %>
<% provide(:description, "Movies generated by our talented users.") %>
<% provide(:keywords, "virtualpet, digitalpets, movies") %>
<% provide(:robots, "noindex, nofollow") %>
<% provide(:h1, "Movie List") %>
<div class="formlinks"><%= paginate @movies %></div>
<br>
<div class="pageformat">
   <% @movies.each_with_index do |movie, index| %>
      <% if(index % 3 == 2) %>
         <div class="container">
      <% else %>
         <!--Container space-->
         <div class="container">
      <% end %>
         <div class="container"><p class="formlinks">Title: <%= link_to movie.title, subplaylist_movie_path(movie.subplaylist, movie) %></p></div> <div class="container"><%= button_to 'Edit', edit_subplaylist_movie_path(movie.subplaylist, movie), method: :get, class: "button editbutton" %></div> <div class="container"><%= button_to 'Destroy', [movie.subplaylist, movie], method: :delete, class: "button destroybutton", data: { confirm: 'Are you sure?' } %></div>
         <p>Created</p>
         <p><%= distance_of_time_in_words_to_now movie.created_on %> ago on</p>
         <p>(<%= movie.created_on.strftime("%B-%d-%Y") %>)</p>
         <p>Updated</p>
         <p><%= distance_of_time_in_words_to_now movie.updated_on %> ago on</p>
         <p>(<%= movie.updated_on.strftime("%B-%d-%Y") %>)</p>
         <% if movie.reviewed %>
            <p>Reviewed</p>
            <p><%= distance_of_time_in_words_to_now movie.reviewed_on %> ago on</p>
            <p>(<%= movie.reviewed_on.strftime("%B-%d-%Y") %>)</p>
         <% end %>
         <% if movie.ogv.to_s != "" || movie.mp4.to_s != "" %>
            <br>
            <p><%= video_tag(getMusicOrVideo("Movie", movie), size: "200x200", :controls => true) %></p>
         <% end %>
         <br>
         <% if movie.user.userinfo.miniavatar.to_s != "" %>
            <p><%= image_tag(movie.user.userinfo.miniavatar_url(:thumb)) %></p>
         <% end %>
         <p class="formlinks">Director: <%= getUserPrivilege(movie.user) %><%= link_to movie.user.vname, user_path(movie.user) %></p>
         <p class="formlinks">Subplaylist: <%= link_to movie.subplaylist.title, mainplaylist_subplaylist_path(movie.subplaylist.mainplaylist, movie.subplaylist) %></p>
         <p>Group: <%= movie.bookgroup.name %></p>
         <p>Points received: <%= movie.pointsreceived %></p>
         <p>Status: <%= getActivity(movie.user) %>
            <% if getActivity(movie.user) != "Online" && getActivity(movie.user) != "Inoperable" %>
               for <%= distance_of_time_in_words_to_now getTime(movie.user) %>
            <% end %>
         </p>
         <br>
         <p class="textindent"><%= textFormater("Multi", movie.description, "All").html_safe %></p>
      </div>
      <% if index % 3 == 2 %>
         <br>
         <br>      
      <% end %>
   <% end %>
</div>
<p class="formlinks"><%= link_to 'Back', root_path %></p>
