<%= form_with(model: @registration, local: true) do |form| %>
  <% if @registration.errors.any? %>
     <div class="alignboxes">
        <div id="errorexplan">
           <h2 id="errorheader"><%= pluralize(@registration.errors.count, "error") %> prohibited this registration from being saved:</h2>
           <ul>
              <% @registration.errors.full_messages.each do |message| %>
                 <li class="explantext"><%= message %></li>
              <% end %>
           </ul>
        </div>
     </div>
  <% end %>
  <div class="pageformat">
    <%= form.label :imaginaryfriend, "What is your imaginary friend's name?" %>
    <%= form.text_field :imaginaryfriend %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :country %>
    <%= form.text_field :country %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :country_timezone %>
    <%= form.time_zone_select :country_timezone, 
    ActiveSupport::TimeZone.us_zones %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :birthday %>
    <%= form.date_select :birthday,
    start_year: Date.today.year - 170, 
    end_year: Date.today.year %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :login_id %>
    <%= form.text_field :login_id %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :vname %>
    <%= form.text_field :vname %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :shared %>
    <%= form.check_box :shared %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :message, "Why did you join?" %>
    <%= form.text_area :message %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.submit class: "button submitbutton" %>
  </div>
  <br>
  <p class="formlinks"><%= link_to 'Back', root_path %></p>
<% end %>
