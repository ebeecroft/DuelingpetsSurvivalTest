<%= form_with(model: [@dragonhoard, @fieldcost], local: true) do |form| %>
  <% if @fieldcost.errors.any? %>
     <div class="alignboxes">
        <div id="errorexplan">
           <h2 id="errorheader"><%= pluralize(@fieldcost.errors.count, "error") %> prohibited this fieldcost from being saved:</h2>
           <ul>
              <% @fieldcost.errors.full_messages.each do |message| %>
                 <li class="explantext"><%= message %></li>
              <% end %>
           </ul>
        </div>
     </div>
  <% end %>
  <div class="pageformat">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <br>
  <% if @object != "Edit" %>
     <div class="pageformat">
       <%= form.label :amount %>
       <%= form.number_field :amount %>
     </div>
     <br>
  <% end %>
  <div class="pageformat">
    <%= form.label :econtype %>
    <%= form.text_field :econtype %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :baseinc_id, "Select Baseinc" %>
    <%= form.collection_select(:baseinc_id, @baseincs, :id, :name) %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.submit class: "button submitbutton" %>
  </div>
  <br>
  <p class="formlinks"><%= link_to 'Back', fieldcosts_path %></p>
<% end %>
