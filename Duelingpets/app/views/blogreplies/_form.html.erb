<%= form_with(model: [@blog, @blogreply], local: true) do |form| %>
  <% if @blogreply.errors.any? %>
     <div class="alignboxes">
        <div id="errorexplan">
           <h2 id="errorheader"><%= pluralize(@blogreply.errors.count, "error") %> prohibited this blogreply from being saved:</h2>
           <ul>
              <% @blogreply.errors.full_messages.each do |message| %>
                 <li class="explantext"><%= message %></li>
              <% end %>
           </ul>
        </div>
     </div>
  <% end %>
  <div class="pageformat">
    <%= form.label :message %>
    <%= form.text_area :message %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.submit class: "button submitbutton" %>
  </div>
  <br>
  <p class="formlinks"><%= link_to 'Back', user_blog_path(@blogreply.blog.user, @blogreply.blog) %></p>
<% end %>
