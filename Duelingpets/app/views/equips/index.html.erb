<% provide(:title, "Duelingpets: Equips") %>
<% provide(:description, "Keeps track of the user's equipment.") %>
<% provide(:keywords, "virtualpet, digitalpets, equip") %>
<% provide(:robots, "noindex, nofollow") %>
<% provide(:h1, "Equip List") %>
<div class="formlinks"><%= paginate @equips %></div>
<br>
<% @equips.each do |equip| %>
   <div class="pageformat">
      <p><%= equip.partner.name %></p>
      <p>Creature: <%= equip.partner.creature.name %></p>
      <p>Capacity: <%= equip.capacity %></p>
      <p>Equipment slots: <%= equip.equipslots.count %></p>
      <p>Owner: <%= getUserPrivilege(equip.partner.user) %><%= link_to equip.partner.user.vname, user_path(equip.partner.user) %></p>
      <p>Status: <%= getActivity(equip.partner.user) %>
         <% if getActivity(equip.partner.user) != "Online" && getActivity(equip.partner.user) != "Inoperable" %>
            for <%= distance_of_time_in_words_to_now getTime(equip.partner.user) %>
         <% end %>
      </p>
   </div>
   <br>
<% end %>
<p class="formlinks"><%= link_to 'Back', root_path %></p>
