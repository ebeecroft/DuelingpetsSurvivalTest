<% provide(:title, "Duelingpets: Findlogin") %>
<% provide(:description, "Allows users to recover their account.") %>
<% provide(:keywords, "virtualpet, digitalpets, account") %>
<% provide(:robots, "index, follow") %>
<% provide(:h1, "Find Login") %>
<div class="pageformat">
   <p><%= image_tag(@artpage.art_url(:thumb)) %></p>
   <p class="textindent"><%= textFormater("Multi", @artpage.message, "All").html_safe %></p>
</div>
<br>
<div class="pageformat">
   <%= form_for(:session, url: findloginpost_path) do |f| %>
      <p><%= f.label :email, "Email" %></p>
      <p><%= f.text_field :email %></p>
      <br>
      <p><%= f.submit "Retrieve account", class: "button submitbutton" %></p>
   <% end %>
</div>
<br>
<div class="pageformat">
   <p class="formlinks"><%= link_to "Back", root_path %></p>
</div>
