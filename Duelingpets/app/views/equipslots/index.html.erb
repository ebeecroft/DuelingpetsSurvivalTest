      <p>Pet: <%= equipslot.equip.partner.name %></p>
      <p>Item 1: <%= equipslot.item1_id %></p>
      <p>Durability: <%= equipslot.curdur1 %>/<%= equipslot.startdur1 %></p>
      <br>
      <p>Item 2: <%= equipslot.item2_id %></p>
      <p>Durability: <%= equipslot.curdur2 %>/<%= equipslot.startdur2 %></p>
