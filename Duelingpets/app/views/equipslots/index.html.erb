<% provide(:title, "Duelingpets: Equipslots") %>
<% provide(:description, "Displays the items that are currently equipped to a pet.") %>
<% provide(:keywords, "virtualpet, digitalpets, equip, items") %>
<% provide(:robots, "noindex, nofollow") %>
<% provide(:h1, "Equipslot List") %>
<div class="formlinks"><%= paginate @equipslots %></div>
<br>
<% @equipslots.each do |equipslot| %>
