<%= form_with(model: [@jukebox, @mainsheet], local: true) do |form| %>
  <% if @mainsheet.errors.any? %>
     <div class="alignboxes">
        <div id="errorexplan">
           <h2 id="errorheader"><%= pluralize(@mainsheet.errors.count, "error") %> prohibited this mainsheet from being saved:</h2>
           <ul>
              <% @mainsheet.errors.full_messages.each do |message| %>
                 <li class="explantext"><%= message %></li>
              <% end %>
           </ul>
        </div>
     </div>
  <% end %>
  <div class="pageformat">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.submit class: "button submitbutton" %>
  </div>
  <br>
  <p class="formlinks"><%= link_to 'Back', user_jukebox_path(@jukebox.user, @jukebox) %></p>
<% end %>
