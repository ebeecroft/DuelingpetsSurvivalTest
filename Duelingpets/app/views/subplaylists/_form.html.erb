<%= form_with(model: [@mainplaylist, @subplaylist], local: true) do |form| %>
  <% if @subplaylist.errors.any? %>
     <div class="alignboxes">
        <div id="errorexplan">
           <h2 id="errorheader"><%= pluralize(@subplaylist.errors.count, "error") %> prohibited this subplaylist from being saved:</h2>
           <ul>
              <% @subplaylist.errors.full_messages.each do |message| %>
                 <li class="explantext"><%= message %></li>
              <% end %>
           </ul>
        </div>
     </div>
  <% end %>
  <div class="pageformat">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :collab_mode %>
    <%= form.check_box :collab_mode %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :fave_folder %>
    <%= form.check_box :fave_folder %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :privatesubplaylist %>
    <%= form.check_box :privatesubplaylist %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.submit class: "button submitbutton" %>
  </div>
  <br>
  <p class="formlinks"><%= link_to 'Back', channel_mainplaylist_path(@mainplaylist.channel, @mainplaylist) %></p>
<% end %>
