<%= form_with(model: @artpage, local: true) do |form| %>
  <% if @artpage.errors.any? %>
     <div class="alignboxes">
        <div id="errorexplan">
           <h2 id="errorheader"><%= pluralize(@artpage.errors.count, "error") %> prohibited this artpage from being saved:</h2>
           <ul>
              <% @artpage.errors.full_messages.each do |message| %>
                 <li class="explantext"><%= message %></li>
              <% end %>
           </ul>
        </div>
     </div>
  <% end %>
  <div class="pageformat">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :message %>
    <%= form.text_area :message %>
  </div>
  <br>
  <p class="pageformat">Art files</p>
  <div class="pageformat">
     <%= image_tag @artpage.art_url(:thumb).to_s if @artpage.art? %>
  </div>
  <div class="pageformat">
     <%= form.file_field :art %>
  </div>
  <div class="pageformat">
    <%= form.label :remote_art_url, "or Art URL" %><br />
    <%= form.text_field :remote_art_url %>
    <%= form.hidden_field :art_cache %>
  </div>
  <div class="pageformat">
    <%= form.submit class: "button submitbutton" %>
  </div>
  <br>
  <p class="formlinks"><%= link_to 'Back', artpages_path %></p>
<% end %>
