<%= form_with(model: @difficulty, local: true) do |form| %>
  <% if @difficulty.errors.any? %>
     <div class="alignboxes">
        <div id="errorexplan">
           <h2 id="errorheader"><%= pluralize(@difficulty.errors.count, "error") %> prohibited this difficulty from being saved:</h2>
           <ul>
              <% @difficulty.errors.full_messages.each do |message| %>
                 <li class="explantext"><%= message %></li>
              <% end %>
           </ul>
        </div>
     </div>
  <% end %>
  <div class="pageformat">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :pointdebt %>
    <%= form.number_field :pointdebt %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :pointloan %>
    <%= form.number_field :pointloan %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :emeralddebt %>
    <%= form.number_field :emeralddebt %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :emeraldloan %>
    <%= form.number_field :emeraldloan %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.submit class: "button submitbutton" %>
  </div>
  <br>
  <p class="formlinks"><%= link_to 'Back', difficulties_path %></p>
<% end %>
