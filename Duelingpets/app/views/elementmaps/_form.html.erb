<%= form_with(model: [@elementchart, @elementmap], local: true) do |form| %>
  <% if @elementmap.errors.any? %>
     <div class="alignboxes">
        <div id="errorexplan">
           <h2 id="errorheader"><%= pluralize(@elementmap.errors.count, "error") %> prohibited this art from being saved:</h2>
           <ul>
              <% @elementmap.errors.full_messages.each do |message| %>
                 <li class="explantext"><%= message %></li>
              <% end %>
           </ul>
        </div>
     </div>
  <% end %>
  <div class="pageformat">
    <%= form.label :element_id, "Select your Element!" %>
    <%= form.collection_select(:element_id, @elements, :id, :name) %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :damageoffset_id, "Power, Weakness, or Strength!" %>
    <%= form.collection_select(:damageoffset_id, @damageoffsets, :id, :name) %>
  </div>
  <br>  
  <div class="pageformat">
    <%= form.submit class: "button submitbutton" %>
  </div>
  <br>
  <p class="formlinks"><%= link_to 'Back', user_elementchart_path(@elementchart.user, @elementchart) %></p>
<% end %>
