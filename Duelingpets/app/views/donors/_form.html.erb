<%= form_with(model: [@donationbox, @donor], local: true) do |form| %>
  <% if @donor.errors.any? %>
     <div class="alignboxes">
        <div id="errorexplan">
           <h2 id="errorheader"><%= pluralize(@donor.errors.count, "error") %> prohibited this donor from being saved:</h2>
           <ul>
              <% @donor.errors.full_messages.each do |message| %>
                 <li class="explantext"><%= message %></li>
              <% end %>
           </ul>
        </div>
     </div>
  <% end %>
  <div class="pageformat">
    <%= form.label :amount %>
    <%= form.number_field :amount %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <br>
  <div class="pageformat">
    <%= form.submit class: "button submitbutton" %>
  </div>
  <br>
  <p class="formlinks"><%= link_to 'Back', user_path(@donationbox.user) %></p>
<% end %>
